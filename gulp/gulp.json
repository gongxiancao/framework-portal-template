{
  "qiniu": {
    "accessKey": "access key",
    "secretKey": "secret key",
    "bucket": {
      "staging": "com-stage-cdn",
      "production": "com-production-cdn"
    }
  },
  "cdn": {
    "staging": "//cdn.stage.com/project",
    "production": "//cdn.production.com/project"
  },
  "cdnizer": {
    "files": [
      "min/*.js",
      "/min/*.js",
      "min/*.css",
      "/min/*.css",
      "images/**/*",
      "/images/**/*",
      "fonts/**/*",
      "/fonts/**/*"
    ]
  },
  "html": ["assets/**/*.html"],
  "css": ["assets/**/*.css"],
  "less": ["assets/**/*.less"],
  "sass": ["assets/**/*.scss"],
  "coffee": [],

  "client": {
    "root": "client",
    "locales": ["client/assets/locales/**/*"],
    "styles": ["client/components/**/*.less", "client/app/**/*.less"],
    "scripts": ["client/**/*.js", "!client/bower_components/**/*"],
    "templates": ["client/**/*.tpl.html"],
    "modules": ["client/**/*.module.js"],
    "assets": ["client/assets/fonts/**/*", "client/assets/images/**/*", "client/assets/locales/**/*"],
    "mainView": "client/index.html",
    "mainStyle": "client/app/app.less",
    "bowerStyle": "client/app/bower.less"
  },
  "server": {
    "root": "server",
    "scripts": ["server/**/*.js"],
    "viewsRoot": "server/views",
    "views": ["server/views/**/*.ejs"]
  },
  "tmp": {
    "root": ".tmp",
    "publicRoot": ".tmp/public",
    "fontRoot": ".tmp/public/fonts",
    "styleRoot": ".tmp/public/styles",
    "localeRoot": ".tmp/public/locales",
    "scriptRoot": ".tmp/public/js",
    "minifyRoot": ".tmp/public/min",
    "mainView": ".tmp/public/index.html",
    "appStyles": [".tmp/public/styles/app.css"],
    "bowerStyles": [".tmp/public/styles/bower_components/**/*.css"],
    "scripts": [".tmp/public/js/**/*.js", "!.tmp/public/js/bower_components/**/*"],
    "bowerFonts": [".tmp/public/styles/bower_components/**/*.{eot,svg,ttf,woff,woff2}"],
    "templates": [".tmp/public/js/**/*.tpl.js"],
    "distAssets": [".tmp/public/**/*", "!.tmp/public/js", "!.tmp/public/js/**/*",
      "!.tmp/public/styles", "!.tmp/public/styles/**/*"],
    "serverRoot": ".tmp/server",
    "serverViewsRoot": ".tmp/server/views"
  },
  "dist": {
    "root": "dist",
    "client": "dist/client",
    "server": "dist/server",
    "serverViewsRoot": "dist/server/views"
  }
}
